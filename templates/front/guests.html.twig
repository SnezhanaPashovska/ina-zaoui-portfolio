{% extends 'front.html.twig' %}

{% block front %}
	<div class="row">
		<div class="col-12">
			<h3 class="mb-5">Invités</h3>
			{% cache 'guests_list_' ~ currentPage %}
			<div class="guests d-flex flex-column">
				{% for guest in guests %}
					<div class="guest py-5 d-flex justify-content-between align-items-center">
						<h4>{{ guest.name }}
							({{ guest.medias|length }})</h4>
						<a href="{{ path('guest', {id: guest.id}) }}">découvrir</a>
					</div>
				{% endfor %}
			</div>
			{% endcache %}
			{# Pagination controls #}
			<div class="pagination">
				{% if currentPage > 1 %}
					<a href="{{ path('guests', {page: currentPage - 1}) }}">Précédent</a>
				{% endif %}

				<span>Page
					{{ currentPage }}
					sur
					{{ totalPages }}</span>

				{% if currentPage < totalPages %}
					<a href="{{ path('guests', {page: currentPage + 1}) }}">Suivant</a>
				{% endif %}
			</div>
		</div>
	</div>
{% endblock %}
